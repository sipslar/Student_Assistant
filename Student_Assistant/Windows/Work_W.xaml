        <Button Content="головне меню" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" />
        <Button Content="предмети" HorizontalAlignment="Left" Margin="114,53,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2" />
    </Grid>
</UserControl>
